<%- include('../partials/header') %>
    
    <% if (user) {%><h1>Hello, <%= user.name %>!</h1>
    <img src="<%= user.photo %>" alt="<%= user.name %>'s Profile Pic" width="100">
    <% } %>
    
    <% if (videogames.length) { %>
    
    <h2>Here are a list of your video games!</h2>
        <ul>
        <% videogames.forEach(function(vg) { %>
            <li><a href="/videogames/<%= vg._id %>"><%= vg.title %></a> - <%= vg.statusOfCompletion %></li>
        <% }) %>
        </ul>

    <% } else { %>

        <h2>You have no video games. <a href="/videogames/new">Click here</a> to add a video game!</h2>
    
    <% }; %>
    

<%- include('../partials/footer') %>